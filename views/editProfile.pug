extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`,method="post",enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") 프로필사진
                input(type="file", id="avatar", name="avatar",accept="image/*")
            input(type="text",placeholder="이름",name="name", value=loggedUser.name)
            input(type="email",placeholder="이메일",name="email", value=loggedUser.email)
            input(type="submit",value="프로필 정보 변경")
        a.form-container__link(href=`/users${routes.changePassword}`)
            button 비밀번호 변경
