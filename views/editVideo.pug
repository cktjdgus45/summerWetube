extends layouts/main

block content
     .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="제목", name="title",value=video.title)
            textarea(name="description", placeholder="추가설명")=video.description
            input(type="submit", value="업데이트")
        a.form-container__link.form-container__link--delete(href=routes.deleteVideo(video.id)) Delete Video