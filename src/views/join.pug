extends layouts/main

block content
    .form-container
        form(action=routes.join, method="post")
            input(type="text",name="name",required=true,placeholder="이름")
            input(type="email",name="email",required=true,placeholder="이메일")
            input(type="password",name="password",required=true,placeholder="1차 비밀번호 확인")
            input(type="password",name="password2",required=true,placeholder="2차 비밀번호 확인")
            input(type="submit",value="회원가입 완료")
        include partials/socialJoin
